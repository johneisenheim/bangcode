function Countdown(){function e(e,t,o,i){Ti.App.fireEvent("update_countdown",{days:e,hours:t,minutes:o,seconds:i}),Ti.API.info("DAYS "+e+", HOURS "+t+", MINUTES "+o+", SECONDS: "+i),n.countIt()}var n={};return n.countIt=function(){var t=2015,o=6,i=17,r=0,a=0,s=0;setTimeout(function(){var u=new Date(t,o-1,i,r,a,s,0),w=new Date,w=new Date(w.getFullYear(),w.getMonth(),w.getDate(),w.getHours(),w.getMinutes(),w.getSeconds(),0,0);n.daysLeft=parseInt((u-w)/864e5),n.hoursLeft=parseInt((u-w)/36e5),n.minutesLeft=parseInt((u-w)/6e4),n.secondsLeft=parseInt((u-w)/1e3),s=60*n.minutesLeft,s=n.secondsLeft-s,a=60*n.hoursLeft,a=n.minutesLeft-a,r=24*n.daysLeft,r=n.hoursLeft-r<0?0:n.hoursLeft-r,days=n.daysLeft,e(days,r,a,s)},1e3)},n}module.exports=Countdown;