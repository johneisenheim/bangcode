function StartChallengeView(){var t=require("ui/newChallenge/Picker"),e=(new t,require("ui/customUI/PageTitle")),i=new e;i.initialize("Duello",10);var o=require("ui/customUI/NormalTile"),n=new o;n.initialize(String.format(L("duels:whenInstruction"),""),10,18);var a=new o;a.initialize(String.format(L("duels:whereInstruction"),""),10,18);var r=new o;r.initialize(String.format(L("duels:challengerInstruction"),""),10,18);var l=require("ui/customUI/CustomButton"),u=new l,d=Titanium.UI.createScrollView({backgroundColor:"#F5F4F2",width:Ti.UI.SIZE,height:Ti.UI.SIZE,layout:"vertical",top:65}),c=Titanium.UI.createLabel({top:5,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseWhen"),""),textAlign:"center",color:"#856C64",width:"95%"}),s=Titanium.UI.createLabel({top:25,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseWhere"),""),textAlign:"center",color:"#856C64",width:"95%"}),T=Titanium.UI.createLabel({top:25,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseChallenger"),""),textAlign:"center",color:"#856C64",width:"95%"}),g={cancel:3,options:["Tra 10 minuti","Tra un'ora","Scegli data","Annulla"],destructive:3,title:"Imposta data"},h=Ti.UI.createOptionDialog(g);return h.addEventListener("click",function(t){switch(t.index){case 0:var e=new Date;e.setMinutes(e.getMinutes()+10);var i=e.toLocaleTimeString(),o=i.split(":");n.setTitle(e.toLocaleDateString()+" "+o[0]+":"+o[1]);break;case 1:var e=new Date;e.setHours(e.getHours()+1);var i=e.toLocaleTimeString(),o=i.split(":");n.setTitle(e.toLocaleDateString()+" "+o[0]+":"+o[1]);break;case 2:h.hide(),Ti.App.fireEvent("show_picker",{})}}),n.addEventListener("click",function(){h.show()}),a.addEventListener("click",function(){Ti.App.fireEvent("close_picker",{});var t=require("ui/newChallenge/Map"),e=new t;e.open()}),r.addEventListener("click",function(){Ti.App.fireEvent("close_picker",{});var t=require("ui/newChallenge/FacebookFriends"),e=new t;e.open()}),u.initialize("Conferma",50),d.getDateFromPicker=function(t){n.setTitle(t)},d.add(i),d.add(c),d.add(n),d.add(s),d.add(a),d.add(T),d.add(r),d.add(u),d}module.exports=StartChallengeView;