function Picker(){var e=Titanium.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.SIZE,layout:"vertical",bottom:-250,zIndex:10,backgroundColor:"white"}),t=Ti.UI.createPicker({type:Ti.UI.PICKER_TYPE_DATE_AND_TIME,minDate:new Date,maxDate:new Date(2018,12,31),value:new Date,top:0,visible:!0}),i=Ti.UI.createButton({systemButton:Ti.UI.iPhone.SystemButton.DONE}),n=Titanium.UI.createButton({systemButton:Titanium.UI.iPhone.SystemButton.FLEXIBLE_SPACE});i.addEventListener("click",function(){var e=t.getValue(),i=e.toLocaleTimeString(),n=i.split(":");Ti.App.fireEvent("close_picker",{date:e.toLocaleDateString()+" "+n[0]+":"+n[1]})});var a=Ti.UI.iOS.createToolbar({items:[n,i],top:0,borderTop:!0,borderBottom:!1,barColor:"#E2BB5A",tintColor:"white"});return e.add(a),e.add(t),e.isShown=!1,e}module.exports=Picker;