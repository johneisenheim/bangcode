function StartChallengeView(){var t=require("ui/handheld/iOS/newChallenge/Picker"),e=(new t,require("ui/customUI/PageTitle")),i=new e;i.initialize("Duello",10);var o=require("ui/customUI/NormalTile"),n=new o;n.initialize(String.format(L("duels:whenInstruction"),""),10,18);var a=new o;a.initialize(String.format(L("duels:whereInstruction"),""),10,18);var r=new o;r.initialize(String.format(L("duels:challengerInstruction"),""),10,18);var l=require("ui/customUI/CustomButton"),d=new l,u=Titanium.UI.createScrollView({backgroundColor:"#F5F4F2",width:Ti.UI.SIZE,height:Ti.UI.SIZE,layout:"vertical",top:65}),c=Titanium.UI.createLabel({top:5,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseWhen"),""),textAlign:"center",color:"#856C64",width:"95%"}),s=Titanium.UI.createLabel({top:25,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseWhere"),""),textAlign:"center",color:"#856C64",width:"95%"}),h=Titanium.UI.createLabel({top:25,font:{fontSize:21,fontFamily:"Roboto-Light"},text:String.format(L("duels:chooseChallenger"),""),textAlign:"center",color:"#856C64",width:"95%"}),f={cancel:3,options:["Tra 10 minuti","Tra un'ora","Scegli data","Annulla"],destructive:3,title:"Imposta data"},m=Ti.UI.createOptionDialog(f);return m.addEventListener("click",function(t){switch(t.index){case 0:var e=new Date;e.setMinutes(e.getMinutes()+10);var i=e.toLocaleTimeString(),o=i.split(":");n.setTitle(e.toLocaleDateString()+" "+o[0]+":"+o[1]);break;case 1:var e=new Date;e.setHours(e.getHours()+1);var i=e.toLocaleTimeString(),o=i.split(":");n.setTitle(e.toLocaleDateString()+" "+o[0]+":"+o[1]);break;case 2:m.hide(),Ti.App.fireEvent("show_picker",{})}}),n.addEventListener("click",function(){m.show()}),a.addEventListener("click",function(){Ti.App.fireEvent("close_picker",{});var t=require("ui/handheld/iOS/newChallenge/Map"),e=new t;e.open()}),r.addEventListener("click",function(){Ti.App.fireEvent("close_picker",{});var t=require("ui/handheld/iOS/newChallenge/FacebookFriends"),e=new t;e.open()}),d.initialize("Conferma",50),u.getDateFromPicker=function(t){n.setTitle(t)},u.add(i),u.add(c),u.add(n),u.add(s),u.add(a),u.add(h),u.add(r),u.add(d),u}module.exports=StartChallengeView;