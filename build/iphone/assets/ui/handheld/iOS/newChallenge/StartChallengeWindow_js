function StartChallengeWindow(){var t=require("ui/handheld/iOS/newChallenge/StartChallengeView"),e=new t,i=require("ui/handheld/iOS/newChallenge/Picker"),o=new i,n=Titanium.UI.createWindow({navTintColor:"white",tintColor:"#E2BB5A",barColor:"#E2BB5A",extendEdges:[Ti.UI.EXTEND_EDGE_TOP],backgroundColor:"#F5F4F2",translucent:!0,statusBarStyle:Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT,layout:"composite",backButtonTitle:String.format(L("main:back"),"")});return n.add(e),Ti.App.addEventListener("show_picker",function(){o.isShown||(n.add(o),o.animate({bottom:0,duration:300}),o.isShown=!0)}),Ti.App.addEventListener("close_picker",function(t){o.isShown&&o.animate({bottom:-250,duration:300},function(){n.remove(o),o.isShown=!1,e.getDateFromPicker(t.date)})}),n}module.exports=StartChallengeWindow;