function Picker(){var t=Titanium.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.SIZE,layout:"vertical",bottom:-250,zIndex:10,backgroundColor:"white"}),i=Ti.UI.createPicker({type:Ti.UI.PICKER_TYPE_DATE_AND_TIME,minDate:new Date,maxDate:new Date(2018,12,31),value:new Date,top:0,visible:!0}),e=Ti.UI.createButton({systemButton:Ti.UI.iPhone.SystemButton.DONE}),o=Titanium.UI.createButton({systemButton:Titanium.UI.iPhone.SystemButton.FLEXIBLE_SPACE});e.addEventListener("click",function(){var t=i.getValue(),e=t.toLocaleTimeString(),o=e.split(":");Ti.App.fireEvent("close_picker",{date:t.toLocaleDateString()+" "+o[0]+":"+o[1]})});var n=Ti.UI.iOS.createToolbar({items:[o,e],top:0,borderTop:!0,borderBottom:!1,barColor:"#E2BB5A",tintColor:"white"});return t.add(n),t.add(i),t.isShown=!1,t}module.exports=Picker;