function QuickGameFinderView(){var e=require("core/Motion"),t=new e,i=!1,o=0,n=ZLSound.createSample({media:"music/gun_loading.mp3",volume:1}),a=Titanium.UI.createView({width:"100%",height:"100%",backgroundColor:"#F5F4F2",layout:"vertical",isGunAdded:!1}),r=Titanium.UI.createLabel({top:60,font:{fontSize:19,fontFamily:"Roboto-Light"},text:"Assumi la posizione di starting come mostrato nell'immagine. Una volta raggiunta la posizione, il dispositivo vibrerà finché la tua posizione non sarà corretta.",textAlign:"center",color:"#856C64",width:"95%"}),l=Titanium.UI.createImageView({top:50,image:"images/position1.png",backgroundColor:"transparent",width:90,height:356}),s=Titanium.UI.createImageView({top:30,image:"images/gun.png",backgroundColor:"transparent",width:"70%",height:"90%"}),d=function(){i&&(t.imInStarting=!0,Ti.API.info("im in starting "+t.imInStarting),n.play())};return s.addEventListener("click",d),Ti.Gesture.addEventListener("orientationchange",function(e){switch(o=e.orientation,Ti.API.info(o),e.orientation){case 2:t.startMotionRecognizer(),a.removeAllChildren(),a.add(s),a.isGunAdded=!0;break;case 1:a.isGunAdded&&(t.stopMotionRecognizer(),a.remove(s),a.add(r),a.add(l),a.isGunAdded=!1)}}),Ti.App.addEventListener("position",function(e){e.what?i||(i=!0):(Ti.Media.vibrate(),i&&(i=!1))}),a.getMyOwnStatus=function(){return Ti.API.info("[INFO] getMyOwnStatus "+i&&t.imInStarting),i&&t.imInStarting},a.add(r),a.add(l),a}module.exports=QuickGameFinderView;