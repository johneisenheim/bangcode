function QuickGameFinderView(){var e=require("core/Motion"),t=new e,i=!1,o=!1,n=0,a=ZLSound.createSample({media:"music/gun_loading.mp3",volume:1}),r=Titanium.UI.createView({width:"100%",height:"100%",backgroundColor:"#F5F4F2",layout:"vertical",isGunAdded:!1}),l=Titanium.UI.createLabel({top:60,font:{fontSize:19,fontFamily:"Roboto-Light"},text:"Assumi la posizione di starting come mostrato nell'immagine. Una volta raggiunta la posizione, il dispositivo vibrerà finché la tua posizione non sarà corretta.",textAlign:"center",color:"#856C64",width:"95%"}),s=Titanium.UI.createImageView({top:50,image:"images/position1.png",backgroundColor:"transparent",width:90,height:356}),d=Titanium.UI.createImageView({top:30,image:"images/gun.png",backgroundColor:"transparent",width:"70%",height:"90%"}),u=function(){i&&(o||(t.imInStarting=!0,Ti.API.info("im in starting "+t.imInStarting),a.play(),o=!0))};d.addEventListener("click",u);var c=function(i){switch(n=i.orientation,null==e?(Ti.API.info("Motion is null"),e=require("core/Motion"),t=new e):Ti.API.info("Motion is not null."),Ti.API.info(n),i.orientation){case 2:t.startMotionRecognizer(),r.removeAllChildren(),r.add(d),r.isGunAdded=!0;break;case 1:r.isGunAdded&&(t.stopMotionRecognizer(),r.remove(d),r.add(l),r.add(s),r.isGunAdded=!1)}};return Ti.App.addEventListener("position",function(e){e.what?i||(i=!0):(Ti.Media.vibrate(),Ti.Media.beep(),i&&(i=!1))}),r.getMyOwnStatus=function(){return i&&t.imInStarting},r.getMotionObject=function(){return t},r.initialize=function(){Ti.Gesture.addEventListener("orientationchange",c)},r.deallocModule=function(){e=null,t=null},r.removeEventOnOrientation=function(){Ti.Gesture.removeEventListener("orientationchange",c)},r.add(l),r.add(s),r}module.exports=QuickGameFinderView;