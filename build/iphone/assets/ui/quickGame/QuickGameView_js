function QuickGameView(){var e=require("core/Motion"),t=new e,i=0,o=ZLSound.createSample({media:"music/gun_loading.mp3",volume:1}),n=Titanium.UI.createView({width:"100%",height:"100%",backgroundColor:"#F5F4F2",layout:"vertical",isGunAdded:!1});n.flag=!1;var a=Titanium.UI.createLabel({top:60,font:{fontSize:19,fontFamily:"Roboto-Light"},text:"Assumi la posizione di starting come mostrato nell'immagine. Una volta raggiunta la posizione, il dispositivo vibrerà finché la tua posizione non sarà corretta.",textAlign:"center",color:"#856C64",width:"95%"}),r=Titanium.UI.createImageView({top:50,image:"images/position1.png",backgroundColor:"transparent",width:90,height:356}),l=Titanium.UI.createImageView({top:30,image:"images/gun.png",backgroundColor:"transparent",width:"70%",height:"90%"}),d=function(){n.flag&&(t.imInStarting=!0,Ti.API.info("im in starting "+t.imInStarting),o.play())};return l.addEventListener("click",d),Ti.Gesture.addEventListener("orientationchange",function(e){switch(i=e.orientation,Ti.API.info(i),e.orientation){case 2:t.startMotionRecognizer(),n.removeAllChildren(),n.add(l),n.isGunAdded=!0;break;case 1:n.isGunAdded&&(t.stopMotionRecognizer(),n.remove(l),n.add(a),n.add(r),n.isGunAdded=!1)}}),Ti.App.addEventListener("position",function(e){e.what?n.flag||(n.flag=!0):(Ti.Media.vibrate(),n.flag&&(n.flag=!1))}),n.add(a),n.add(r),n}module.exports=QuickGameView;