function QuickGameView(){var e=require("core/Motion"),t=new e,i=!1,o=0,n=ZLSound.createSample({media:"music/gun_loading.mp3",volume:1}),a=Titanium.UI.createView({width:"100%",height:"100%",backgroundColor:"#F5F4F2",layout:"vertical",isGunAdded:!1}),r=!1,l=!1,s=Titanium.UI.createLabel({top:60,font:{fontSize:19,fontFamily:"Roboto-Light"},text:"Assumi la posizione di starting come mostrato nell'immagine. Una volta raggiunta la posizione, il dispositivo vibrerà finché la tua posizione non sarà corretta.",textAlign:"center",color:"#856C64",width:"95%"}),d=Titanium.UI.createImageView({top:50,image:"images/position1.png",backgroundColor:"transparent",width:90,height:356}),u=Titanium.UI.createImageView({top:30,image:"images/gun.png",backgroundColor:"transparent",width:"70%",height:"90%"}),c=function(){r&&(i||(t.imInStarting=!0,Ti.API.info("im in starting "+t.imInStarting),n.play(),i=!0,l=!0))};u.addEventListener("click",c);var m=function(i){switch(o=i.orientation,null==e?(Ti.API.info("Motion is null"),e=require("core/Motion"),t=new e):Ti.API.info("Motion is not null."),Ti.API.info(o),i.orientation){case 2:t.startMotionRecognizer(),a.removeAllChildren(),a.add(u),a.isGunAdded=!0;break;case 1:a.isGunAdded&&(t.stopMotionRecognizer(),a.remove(u),a.add(s),a.add(d),a.isGunAdded=!1)}};return Ti.App.addEventListener("position",function(e){e.what?r||(r=!0):(Ti.Media.vibrate(),Ti.Media.beep(),r&&(r=!1))}),a.initialize=function(){Ti.Gesture.addEventListener("orientationchange",m)},a.canISendStartPacket=function(){return l},a.getMotionObject=function(){return t},a.deallocModule=function(){e=null,t=null},a.removeEventOnOrientation=function(){Ti.Gesture.removeEventListener("orientationchange",m)},a.add(s),a.add(d),a}module.exports=QuickGameView;