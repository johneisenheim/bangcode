function Loader(){var e=null,t=Titanium.UI.createView({backgroundColor:"#FAD985",width:60,height:60,borderRadius:10,opacity:.96,zIndex:50,top:"40%",layout:"composite",viewShadowColor:"#817F7F",viewShadowRadius:2,viewShadowOffset:2}),i=Titanium.UI.createView({backgroundImage:"images/loading.png",backgroundColor:"transparent",width:35,height:35}),n=Ti.UI.create2DMatrix();n=n.rotate(180);var a=Ti.UI.createAnimation({transform:n,duration:900,repeat:1e7});return t.add(i),t.showLoader=function(n){null!=n&&(e=n),n.add(t),i.animate(a)},t.restartAnimation=function(){i.animate(a),Ti.API.info("restartAnimation function")},t.hideLoader=function(e){e.remove(t)},t}module.exports=Loader;