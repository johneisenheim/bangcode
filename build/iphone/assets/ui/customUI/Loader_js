function Loader(){var e=null,t=Titanium.UI.createView({backgroundColor:"#FAD985",width:60,height:60,borderRadius:10,opacity:.96,zIndex:10,top:"40%",layout:"composite",viewShadowColor:"#817F7F",viewShadowRadius:2,viewShadowOffset:2}),i=Titanium.UI.createView({backgroundImage:"images/loading.png",backgroundColor:"transparent",width:35,height:35}),n=Ti.UI.create2DMatrix();return n=n.rotate(180),t.add(i),t.showLoader=function(o){null!=o&&(e=o),i.animate({transform:n,duration:900,repeat:3e5}),o.add(t)},t.hideLoader=function(e){e.remove(t)},t}module.exports=Loader;