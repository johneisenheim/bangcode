function Loader(){function e(){n.animate(o)}var t=null,i=Titanium.UI.createView({backgroundColor:"#FAD985",width:60,height:60,borderRadius:10,opacity:.96,zIndex:50,top:"40%",layout:"composite",viewShadowColor:"#817F7F",viewShadowRadius:2,viewShadowOffset:2}),n=Titanium.UI.createView({backgroundImage:"images/loading.png",backgroundColor:"transparent",width:35,height:35}),a=Ti.UI.create2DMatrix();a=a.rotate(180);var o=Ti.UI.createAnimation({transform:a,duration:900,repeat:1e7});return i.add(n),i.showLoader=function(n){null!=n&&(t=n),n.add(i),e()},i.hideLoader=function(e){e.remove(i)},i}module.exports=Loader;