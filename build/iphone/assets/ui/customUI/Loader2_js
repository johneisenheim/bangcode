function Loader2(){var e=null;Ti.API.info("loader2 called");var t=null,i=null,n=Titanium.UI.createView({backgroundColor:"#FAD985",width:60,height:60,borderRadius:10,opacity:.96,zIndex:50,top:"40%",layout:"composite",viewShadowColor:"#817F7F",viewShadowRadius:2,viewShadowOffset:2}),a=Titanium.UI.createView({backgroundImage:"images/loading.png",backgroundColor:"transparent",width:35,height:35});return n.add(a),n.showLoader=function(o){null!=o&&(e=o),t=Ti.UI.create2DMatrix(),t=t.rotate(180),i=Ti.UI.createAnimation({transform:t,duration:900,repeat:1e7}),o.add(n),a.animate(i)},n.restartAnimation=function(){a.animate(i),Ti.API.info("restartAnimation function")},n.hideLoader=function(e){e.remove(n)},n}module.exports=Loader2;