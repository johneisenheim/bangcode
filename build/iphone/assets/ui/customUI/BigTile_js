function BigTile(){var t=Titanium.UI.createView({backgroundColor:"transparent",width:"90%",height:100}),e=Titanium.UI.createView({backgroundColor:"#FDFDFD",width:"100%",height:97,top:0}),i=Titanium.UI.createView({backgroundColor:"#E2E2E2",width:"100%",height:3,top:97}),n=Titanium.UI.createLabel({text:"",font:{fontSize:21,fontFamily:"Roboto-Light"},color:"#856C64",textAlign:"center"});return t.initialize=function(i,o,a){t.top=o,n.text=i,n.setFont({fontSize:a,fontFamily:"Roboto-Light"}),e.add(n)},t.setTitle=function(t){n.text=t},t.add(e),t.add(i),t}module.exports=BigTile;