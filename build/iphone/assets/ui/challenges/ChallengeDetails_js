function ChallengesDetails(){var e=require("ui/customUI/BigTile"),t=new e;t.initialize("tileTitle",15,19);var i=require("ui/customUI/PageTitle"),n=new i;n.initialize("Duello",75);var o=require("ui/customUI/CustomDisabledButton"),a=new o;a.initialize("Inzia",50,18);var r=require("ui/customUI/CustomButton"),l=new r;l.initialize("Mostra mappa",10,18);var u=Titanium.UI.createWindow({navTintColor:"white",tintColor:"#E2BB5A",barColor:"#E2BB5A",extendEdges:[Ti.UI.EXTEND_EDGE_TOP],backgroundColor:"#F5F4F2",translucent:!0,statusBarStyle:Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT,layout:"composite",backButtonTitle:String.format(L("main:back"),""),tabBarHidden:!0}),s=Titanium.UI.createScrollView({width:"100%",height:"100%",backgroundColor:"#F5F4F2",layout:"vertical"}),d=Titanium.UI.createLabel({text:"Sfida contro Carboma",top:15,font:{fontSize:24,fontFamily:"Roboto-Light"},textAlign:"center",color:"#856C64",width:"95%"}),c=Titanium.UI.createLabel({text:"Tieniti pronto in",top:25,font:{fontSize:21,fontFamily:"Roboto-Light"},textAlign:"center",color:"#856C64",width:"95%"});countdownLabel=Titanium.UI.createLabel({text:"Countdown",top:25,font:{fontSize:80,fontFamily:"Western"},textAlign:"center",color:"#856C64",width:"100%"});var f=Titanium.UI.createLabel({text:"ore : minuti : secondi",top:5,font:{fontSize:18,fontFamily:"Roboto-Light"},textAlign:"center",color:"#856C64",width:"95%"}),w=Titanium.UI.createButton({title:"Ritirati",font:{fontSize:21},color:"#856C64",top:10});return u.initialize=function(){startCountdown()},s.add(n),s.add(d),s.add(t),s.add(c),s.add(countdownLabel),s.add(f),s.add(a),s.add(l),s.add(w),u.add(s),u}function countdown(){var e=2015,t=4,i=8,n=14,o=0,a=0;setTimeout(function(){var r=new Date(e,t-1,i,n,o,a,0),l=new Date,l=new Date(l.getFullYear(),l.getMonth(),l.getDate(),l.getHours(),l.getMinutes(),l.getSeconds(),0,0),u=parseInt((r-l)/864e5),s=parseInt((r-l)/36e5),d=parseInt((r-l)/6e4),c=parseInt((r-l)/1e3);a=60*d,a=c-a,o=60*s,o=d-o,n=24*u,n=0>s-n?0:s-n,days=u,days>0?(countdownLabel.font.fontSize=100,countdownLabel.text=days+" giorni"):(countdownLabel.font.fontSize=100,countdownLabel.text=n+":"+o+":"+a),startCountdown()},1e3)}function startCountdown(){countdown()}var countdownLabel;module.exports=ChallengesDetails;