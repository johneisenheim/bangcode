function Picker(){var e=Titanium.UI.createView({width:Ti.UI.SIZE,height:Ti.UI.SIZE,layout:"vertical",bottom:-260,zIndex:30,backgroundColor:"white"}),t=Ti.UI.createPicker({type:Ti.UI.PICKER_TYPE_DATE_AND_TIME,minDate:new Date,maxDate:new Date(2018,12,31),value:new Date,top:0,isShown:!1}),i=Ti.UI.createButton({systemButton:Ti.UI.iPhone.SystemButton.DONE}),n=Titanium.UI.createButton({systemButton:Titanium.UI.iPhone.SystemButton.FLEXIBLE_SPACE});i.addEventListener("click",function(){var i=t.getValue(),n=i.toLocaleTimeString(),a=n.split(":");Ti.App.fireEvent("close_second_picker",{date:i.toLocaleDateString()+" "+a[0]+":"+a[1]}),e.customHide()});var a=Ti.UI.iOS.createToolbar({items:[n,i],top:0,borderTop:!0,borderBottom:!1,barColor:"#E2BB5A",tintColor:"white"});return e.setDate=function(e){t.setValue(e)},e.customShow=function(){t.isShown||(e.animate({bottom:0,duration:300}),t.isShown=!0)},e.customHide=function(){t.isShown&&(e.animate({bottom:-260,duration:300}),t.isShown=!1)},e.add(a),e.add(t),e.isShown=!1,e}module.exports=Picker;